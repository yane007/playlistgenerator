@model IEnumerable<PlaylistViewModel>
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm())
{
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>

    @if (Model.Count() == 0)
    {
        <p>There are no playlists</p>
    }
    else
    {
        <div class="wrapper">

            @foreach (var item in Model)
            {
                <div>
                    <p>@item.Title <br /> @item.DurationInHours </p>
                    <a style="background: url(@item.PixabayImage.WebformatURL)" class="list-group" asp-controller="Playlists" asp-action="Playlist"
                       asp-route-id="@item.Id">@item.Rank</a>

                </div>
            }

        </div>
    }

    <style>
        .wrapper {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            justify-items: center;
        }

            .wrapper > div > p {
                text-align: center;
            }

        .list-group {
            border: 1px solid black;
            width: 150px;
            height: 150px;
            font-size: medium;
            text-align: center;
            color: black;
            text-decoration: none;
            margin-bottom: 3vh;
            border-radius: 5px;
        }

            .list-group:hover {
                font-weight: 800;
                color: black;
                text-decoration: none;
                opacity: 0.2;
                border: 3px solid black;
            }
    </style>

}