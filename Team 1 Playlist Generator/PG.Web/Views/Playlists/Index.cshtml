@model IList<PlaylistViewModel>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();


    @if (Model.Count() == 0)
    {
        <p>There are no playlists</p>
    }

    else
    {
<div class="wrapper">
    @foreach (var item in Model)
    {
    <div>
        <p>@item.Title <br /> @item.DurationInHours </p>
        <a style="background: url(@item.PixabayImage)" class="list-group" asp-controller="Playlists" asp-action="Playlist"
           asp-route-id="@item.Id">@item.Rank</a>

        <form class="form" method="post" asp-controller="Playlists" asp-action="DeletePlaylistWeb" style="margin-bottom:30px">
            <input type="hidden" name="id" value="@item.Id" />
            <div class="form__buttons buttons">
                <button type="submit">Delete</button>
            </div>
        </form>
    </div>



        @*<a asp-controller="Playlists" asp-action="DeletePlaylistWeb" asp-route-id="@item.Id"> delete </a>*@
    }
</div>
    }

    <style>

        .wrapper {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            justify-items: center;
        }

            .wrapper > div > p {
                text-align: center;
            }

        .list-group {
            border: 1px solid black;
            width: 150px;
            height: 150px;
            font-size: medium;
            text-align: center;
            color: black;
            text-decoration: none;
            margin-bottom: 3vh;
            border-radius: 5px;
            transition:transform 0.5s;
        }

            .list-group:hover {
                font-weight: 800;
                color: black;
                text-decoration: none;
                opacity: 0.2;
                border: 3px solid black;
                transform:translateY(-10vh);
            }
    </style>


}
